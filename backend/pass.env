# Server configuration
PORT=4000
NODE_ENV=production

# Security
JWT_SECRET=replace_with_a_strong_random_secret
SALT_ROUNDS=12

# PostgreSQL connection settings
PGUSER=waste_user
PGPASSWORD=your_password_here
PGHOST=localhost
PGPORT=5432
PGDATABASE=waste_manager

# Client origin (frontend URL)
CLIENT_ORIGIN=https://your-frontend-domain.com

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Twilio (SMS notifications)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Email (SendGrid or SMTP)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM="Usafi-Mtaani <noreply@yourdomain.com>"

# Alternative sender identity (optional)
# EMAIL_FROM="EcoRewards <noreply@yourdomain.com>"

# Scheduling
SCHEDULE_REMINDERS=false
